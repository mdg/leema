func cat[T] a:[T] b:[T] /[T] >> __RUST__ --

func head[T] l:[T] /T >>
|h:_ >> h
|_ >> fail(#param_error, "cannot take head from empty list")
--

func _filter[T] acc:[T] in:[T] pred:(Fn T /Bool) /[T] >>
|(acc, [], _) >> reverse(acc)
|(acc, h;t, f) >>
    let matcher := f(h)
    let new_acc :=
        match f(h)
        |True >> h;acc
        |False >> acc
        --
    _filter(new_acc, t, f)
--

func _reverse[T] out:[T] in:[T] /[T] >>
|(out, []) >> out
|(out, h;t) >> _reverse(h;out, t)
--
