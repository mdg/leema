
func map[A B] items:[A] f:(Fn A /B) /[B] >>
    _map([], items, f)
--

func _map[C D] result:[C] input:[D] f:(Fn D /C) /[C] >>
|(result, [], _f) >> reverse(result)
|(result, h;t, f) >> _map(f(h);result, t, f)
--

func reduce[A B] init:A items:[B] f:(Fn A B /A) /A >>
    match items
    |[] >> init
    |head;tail >>
        let new_val := f(init, head)
        reduce(new_val, tail, f)
    --
--

func filter[H] items:[H] f:(Fn H /Bool) /[H] >>
    _filter([], items, f)
--

func reverse[E] items:[E] /[E] >>
    _reverse([], items)
--

